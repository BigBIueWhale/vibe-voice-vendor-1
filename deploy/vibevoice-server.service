[Unit]
Description=VibeVoice ASR Server
After=network.target

[Service]
Type=simple
User=vibevoice
Group=vibevoice
WorkingDirectory=/opt/vibe-voice-vendor
EnvironmentFile=/opt/vibe-voice-vendor/.env
ExecStart=/opt/vibe-voice-vendor/.venv/bin/python -m server
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
ReadWritePaths=/opt/vibe-voice-vendor

[Install]
WantedBy=multi-user.target
