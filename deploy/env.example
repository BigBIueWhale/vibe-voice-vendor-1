# VibeVoice ASR Server Configuration
# Copy this to .env and fill in values

# vLLM server URL (running in Docker)
VVV_VLLM_BASE_URL=http://localhost:37845

# FastAPI server bind address (vvv_proxy proxies to this)
VVV_SERVER_HOST=127.0.0.1
VVV_SERVER_PORT=54912

# Maximum upload size in bytes (default: 500MB)
VVV_MAX_AUDIO_BYTES=524288000

# Maximum number of queued jobs
VVV_MAX_QUEUE_SIZE=50

# Path to ES256 public key PEM file (used to verify JWT bearer tokens)
# Generate key pair + token with: uv run python -m scripts.generate_token
VVV_JWT_PUBLIC_KEY_FILE=/opt/vibe-voice-vendor/keys/public.pem

# Path to file listing revoked token IDs (one JTI per line, checked every 30s)
# To revoke a token, append its JTI to this file â€” no restart required
VVV_REVOKED_TOKENS_FILE=/opt/vibe-voice-vendor/revoked_tokens.txt

# Reject requests without X-Forwarded-Proto: https (enable behind TLS reverse proxy)
VVV_REQUIRE_HTTPS=true

# vLLM model settings
VVV_VLLM_MODEL_NAME=vibevoice
VVV_VLLM_MAX_TOKENS=65536
VVV_VLLM_TEMPERATURE=0.0
VVV_VLLM_TOP_P=1.0
